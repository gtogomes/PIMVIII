<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PIMVIII.Maui.Views.UploadPage"
    BackgroundColor="#F4F1FF">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <Label Text="Upload de Conteúdo"
                   FontSize="30"
                   FontAttributes="Bold"
                   TextColor="#4B42CC"
                   HorizontalOptions="Center" />

            <!-- CARD -->
            <Border BackgroundColor="White">

                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>

                <Border.Shadow>
                    <Shadow Brush="#30000000"
                            Radius="10"
                            Opacity="0.3"/>
                </Border.Shadow>

                <VerticalStackLayout Padding="25" Spacing="20">

                    <!-- TÍTULO -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Título do Conteúdo"
                               FontSize="18"
                               TextColor="#444" />
                        <Entry x:Name="TitleEntry"
                               Placeholder="Digite o título"
                               BackgroundColor="#EFEFEF"
                               TextColor="Black"
                               PlaceholderColor="#777"
                               HeightRequest="45" />
                    </VerticalStackLayout>

                    <!-- PICKER -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Tipo de Conteúdo"
                               FontSize="18"
                               TextColor="#444" />
                        <Picker x:Name="TypePicker"
                                Title="Selecione..."
                                BackgroundColor="#EFEFEF"
                                TextColor="Black"
                                TitleColor="#555">
                            <Picker.Items>
                                <x:String>Vídeo</x:String>
                                <x:String>Áudio</x:String>
                                <x:String>Podcast</x:String>
                            </Picker.Items>
                        </Picker>
                    </VerticalStackLayout>

                    <!-- STATUS DO ARQUIVO -->
                    <Label x:Name="SelectedFileLabel"
                           Text="Nenhum arquivo selecionado"
                           FontSize="15"
                           TextColor="#777" />

                    <!-- BOTÃO SELECIONAR -->
                    <Button Text="Selecionar Arquivo"
                            Clicked="SelectFile"
                            BackgroundColor="#6C63FF"
                            CornerRadius="10"
                            TextColor="White"
                            HeightRequest="50" />

                    <!-- BOTÃO ENVIAR -->
                    <Button Text="Enviar"
                            Clicked="SendFile"
                            BackgroundColor="#4B42CC"
                            CornerRadius="10"
                            TextColor="White"
                            HeightRequest="50" />

                </VerticalStackLayout>

            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
