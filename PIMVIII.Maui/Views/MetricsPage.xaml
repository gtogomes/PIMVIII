<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PIMVIII.Maui.Views.MetricsPage"
    BackgroundColor="#F4F1FF">

    <VerticalStackLayout Padding="25" Spacing="25">

        <Label Text="Análise de Métricas"
               FontSize="32"
               FontAttributes="Bold"
               TextColor="#4B42CC"
               HorizontalOptions="Center"/>

        <Border StrokeThickness="0"
                BackgroundColor="White">

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="18"/>
            </Border.StrokeShape>

            <Border.Shadow>
                <Shadow Brush="#30000000"
                        Opacity="0.4"
                        Radius="18"/>
            </Border.Shadow>

            <VerticalStackLayout Padding="20" Spacing="12">
                <Label Text="Visualizações: 1023" FontSize="20" TextColor="#444"/>
                <Label Text="Curtidas: 312" FontSize="20" TextColor="#444"/>
                <Label Text="Comentários: 54" FontSize="20" TextColor="#444"/>
                <Label Text="Compartilhamentos: 21" TextColor="#444" FontSize="20"/>
            </VerticalStackLayout>

        </Border>

    </VerticalStackLayout>

</ContentPage>
