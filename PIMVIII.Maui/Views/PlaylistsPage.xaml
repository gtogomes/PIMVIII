<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PIMVIII.Maui.Views.PlaylistsPage"
    BackgroundColor="#F4F1FF">

    <VerticalStackLayout Padding="25" Spacing="25">

        <Label Text="Minhas Playlists"
               FontSize="32"
               FontAttributes="Bold"
               TextColor="#4B42CC"
               HorizontalOptions="Center"/>

        <Border StrokeThickness="0"
                BackgroundColor="White">

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="18"/>
            </Border.StrokeShape>

            <Border.Shadow>
                <Shadow Brush="#30000000"
                        Opacity="0.4"
                        Radius="18"/>
            </Border.Shadow>

            <ListView>
                <ListView.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Favoritas</x:String>
                        <x:String>MÃºsicas</x:String>
                        <x:String>Podcasts</x:String>
                    </x:Array>
                </ListView.ItemsSource>
            </ListView>

        </Border>

        <Button Text="Criar Nova Playlist"
                HeightRequest="55"
                BackgroundColor="#6C63FF"
                CornerRadius="12"
                TextColor="White"/>

    </VerticalStackLayout>

</ContentPage>
